# ============================================
#           AI SLOP CONFIGURATION
#       Copy this file to .env and fill values
# ============================================

# ============================================
#           REDDIT CONFIGURATION
# ============================================
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=AI_Slop_Bot/1.0 by /u/your_username

# Comma-separated list of subreddits to scrape
SUBREDDITS=nosleep,AmITheAsshole,stories,tifu,pettyrevenge,MaliciousCompliance

# ============================================
#           SCRAPING CONFIGURATION
# ============================================
# Number of stories to process per scheduled run (keep low for EC2 free tier)
STORIES_PER_RUN=10

# Minimum upvotes required for a story
MIN_UPVOTES=100

# Reddit sort method: hot, top, new
STORY_SORT=top

# Time filter for posts: hour, day, week, month, year, all
STORY_TIME_FILTER=all

# Target word count (stories below this will be extended by AI)
MIN_WORD_COUNT=300

# Maximum video duration in seconds (60 for YouTube Shorts/IG Reels)
MAX_VIDEO_DURATION_SECONDS=60

# ============================================
#           GOOGLE AI (GEMINI)
# ============================================
# Get API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
#           GOOGLE CLOUD TTS
# ============================================
# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/home/ubuntu/.credentials/service-account.json

# Language code for TTS
TTS_LANGUAGE_CODE=en-US

# ============================================
#           GOOGLE DRIVE
# ============================================
# Folder ID for gameplay input videos
# Get from Drive URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE
DRIVE_INPUT_FOLDER_ID=your_gameplay_folder_id_here

# Folder ID for output videos
DRIVE_OUTPUT_FOLDER_ID=your_output_folder_id_here

# OAuth credentials file path
GOOGLE_OAUTH_CREDENTIALS_PATH=/home/ubuntu/.credentials/oauth-credentials.json

# Token file path (will be created after first auth)
GOOGLE_OAUTH_TOKEN_PATH=/home/ubuntu/.credentials/token.json

# ============================================
#           YOUTUBE
# ============================================
# Maximum uploads per day (YouTube API quota limit)
YOUTUBE_DAILY_UPLOAD_LIMIT=6

# ============================================
#           AWS / EMAIL
# ============================================
# AWS region for SES
AWS_REGION=ap-south-1

# AWS credentials (or use IAM role for EC2)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Email to receive notifications
NOTIFICATION_EMAIL=your_email@example.com

# Verified sender email in SES
SENDER_EMAIL=noreply@yourdomain.com

# ============================================
#           DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your_password@db.xxxxx.supabase.co:5432/postgres

# ============================================
#           SCHEDULING
# ============================================
# How often to run the main pipeline (in hours)
SCHEDULE_INTERVAL_HOURS=6

# Timezone for scheduling and timestamps
TIMEZONE=Asia/Kolkata

# ============================================
#           VIDEO SETTINGS
# ============================================
# Output video dimensions (720x1280 for 9:16 portrait)
VIDEO_WIDTH=720
VIDEO_HEIGHT=1280

# Video framerate
VIDEO_FPS=30

# Video bitrate (lower = faster processing, smaller files)
VIDEO_BITRATE=2M

# Watermark text (your channel/account name)
WATERMARK_TEXT=@YourChannelName

# Outro duration in seconds
OUTRO_DURATION_SECONDS=3

# ============================================
#           SUBTITLE SETTINGS
# ============================================
# Font for subtitles (use system fonts for speed)
SUBTITLE_FONT=DejaVu Sans

# Main text color (white)
SUBTITLE_COLOR=#FFFFFF

# Outline color (black)
SUBTITLE_OUTLINE_COLOR=#000000

# Keyword highlight color (red)
SUBTITLE_HIGHLIGHT_COLOR=#FF0000

# ============================================
#           TESTING
# ============================================
# Enable test mode (processes only 1 story, skips uploads)
TEST_MODE=false

# Number of stories in test mode
TEST_STORY_LIMIT=1

# ============================================
#           LOGGING
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Local log file path
LOG_FILE_PATH=/home/ubuntu/ai_slop/logs/app.log

# CloudWatch log group name
CLOUDWATCH_LOG_GROUP=ai-slop-pipeline
